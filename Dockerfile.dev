# Spencer Denim Task Manager - Development Dockerfile
FROM node:20-alpine

# Install dependencies for better compatibility and health checks
RUN apk add --no-cache \
    libc6-compat \
    curl \
    postgresql-client

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Create health check endpoint directory
RUN mkdir -p src/app/api/health

# Expose port
EXPOSE 3000

# Add health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:3000/api/health || exit 1

# Start development server with turbopack
CMD ["npm", "run", "dev"]
