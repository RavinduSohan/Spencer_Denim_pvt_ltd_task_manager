# Spencer Denim Task Manager - Development Dockerfile
FROM node:20-alpine

# Install dependencies for better compatibility, health checks, and SQLite
RUN apk add --no-cache \
    libc6-compat \
    curl \
    sqlite \
    sqlite-dev \
    python3 \
    make \
    g++

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Create data directory for SQLite databases
RUN mkdir -p /app/data

# Generate Prisma clients (both PostgreSQL and SQLite)
RUN npx prisma generate
RUN npx prisma generate --schema=prisma/schema-sqlite.prisma

# Create health check endpoint directory
RUN mkdir -p src/app/api/health

# Expose port
EXPOSE 3000

# Add health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:3000/api/health || exit 1

# Start development server with turbopack
CMD ["npm", "run", "dev"]
