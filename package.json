{
  "name": "taskmanager",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:sqlite:generate": "prisma generate --schema=prisma/schema-sqlite.prisma",
    "db:sqlite:push": "prisma db push --schema=prisma/schema-sqlite.prisma",
    "db:sqlite:seed": "tsx prisma/sqlite-seed.ts",
    "db:sqlite:studio": "prisma studio --schema=prisma/schema-sqlite.prisma",
    "docker:supabase": "docker-compose up --build -d",
    "docker:local": "docker-compose -f docker-compose.local.yml up --build -d",
    "docker:dev": "docker-compose up --build",
    "docker:dev:detached": "docker-compose up --build -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:stop": "docker-compose down",
    "docker:stop:local": "docker-compose -f docker-compose.local.yml down -v",
    "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.15.0",
    "@tanstack/react-table": "^8.21.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "chart.js": "^4.5.0",
    "chartjs": "^0.3.24",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "next-auth": "^4.24.11",
    "node-fetch": "^2.7.0",
    "react": "19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "recharts": "^3.1.2",
    "xlsx": "^0.18.5",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/xlsx": "^0.0.35",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "prisma": "^6.15.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "typescript": "^5"
  }
}
