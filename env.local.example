# Spencer Denim Task Manager - Local Environment Configuration

# Application Settings
NODE_ENV=development
APP_NAME="Spencer Denim Task Manager"

# Authentication (NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=spencer-denim-local-secret-key-change-in-production

# Database URLs (SQLite - Local Files)
# Main application database
DATABASE_URL="file:./data/dynamic-tables.db"

# Authentication database  
AUTH_DATABASE_URL="file:./prisma/sqlite-database.db"

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Development Settings
NEXT_DEBUG=false
LOG_LEVEL=info

# Optional: Port configuration (default: 3000)
PORT=3000